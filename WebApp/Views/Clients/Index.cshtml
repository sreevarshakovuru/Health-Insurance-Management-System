@model IEnumerable<HealthInsuranceManagement.Models.Client>

<h2>Clients</h2>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var client in Model)
    {
        <tr>
            <td>@client.FirstName</td>
            <td>@client.LastName</td>
            <td>@client.DateOfBirth.ToShortDateString()</td>
            <td>@client.Email</td>
            <td>
                <a href="@Url.Action("Edit", "Clients", new { id = client.ClientID })">Edit</a>
            </td>
        </tr>
    }
    </tbody>
</table>
